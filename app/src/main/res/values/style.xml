<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="acitivity_1_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/ic_sign_up_background</item>
    </style>

    <style name="edit_text_field_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/view_pager_container_border</item>
    </style>

    <style name="pokemon_character_header">
        <item name="android:textSize">10dp</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="popup_theme" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="sprite_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginLeft">@dimen/padding_20dp</item>
        <item name="android:layout_marginRight">@dimen/padding_20dp</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="sprite_image">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_margin">10dp</item>
    </style>




</resources>